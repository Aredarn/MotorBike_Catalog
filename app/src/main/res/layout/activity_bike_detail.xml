<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BikeDetail"
    android:background="#9A998F">

    <TextView
        android:id="@+id/bikeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:text="MOTORBIKE NAME"
        android:layout_margin="20sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/horsePowerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                style="@style/InfoTextsStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lóerő:" />

                            <TextView
                                android:id="@+id/HorsePower"
                                style="@style/InfoTextsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:text="127ps" />
                            " />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/HorsePowerSeekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:max="200"
                            android:min="15"
                            android:progress="20"
                            android:progressBackgroundTint="#000000"
                            android:progressTint="#D13030">

                        </SeekBar>

                    </LinearLayout>

                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/accelerationTableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ccmTextView"
                                style="@style/InfoTextsStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Köbcenti:" />

                            <TextView
                                android:id="@+id/ccmValue"
                                style="@style/InfoTextsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:text="487ccm" />
                            " />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/ccmSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:max="1400"
                            android:min="15"
                            android:progressBackgroundTint="#040404">

                        </SeekBar>

                    </LinearLayout>

                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/topSpeedTableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/topSpeedTextView"
                                style="@style/InfoTextsStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Végsebesség:" />

                            <TextView
                                android:id="@+id/topSpeedValue"
                                style="@style/InfoTextsStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:text="299kmh"
                                android:textSize="15sp" />
                            " />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/topSpeedSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:max="299"
                            android:min="15"
                            android:progressBackgroundTint="#000000">

                        </SeekBar>

                    </LinearLayout>

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/bikeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/offroad"
            android:layout_margin="15dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/manufacturertextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gyártó: "
                    style="@style/InfoTextsStyle"/>

                <TextView
                    android:id="@+id/manufacturerValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suzuki"
                    style="@style/InfoTextsStyle"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


                <TextView
                    android:id="@+id/prodYeartextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gyártási évek: "
                    style="@style/InfoTextsStyle"/>

                <TextView
                    android:id="@+id/prodYearValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1989 - 2007"
                    style="@style/InfoTextsStyle"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/typetextView"
                    style="@style/InfoTextsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor típus:" />

                <TextView
                    android:id="@+id/typeValue"
                    style="@style/InfoTextsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sor 2" />

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/weighttextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Súly:"
                    style="@style/InfoTextsStyle"/>

                <TextView
                    android:id="@+id/weightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="183kg"
                    style="@style/InfoTextsStyle"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fuelSizeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tank mérete:"
                    style="@style/InfoTextsStyle"/>

                <TextView
                    android:id="@+id/fuelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17liter"
                    style="@style/InfoTextsStyle"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fuelInjectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Befecskendezés:"
                    style="@style/InfoTextsStyle"/>

                <TextView
                    android:id="@+id/fuelInjectionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karburátor"
                    style="@style/InfoTextsStyle"/>

            </TableRow>


        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/clicks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="right"/>


</LinearLayout>