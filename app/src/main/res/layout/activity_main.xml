<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#445454"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOTOR KATALÓGUS"
        android:textAlignment="center"
        android:textColor="#020101"
        android:textSize="40sp"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:src="@drawable/road"
        app:srcCompat="@drawable/road"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openManufacturers"
            android:text="Márkák" />

        <Button
            android:id="@+id/button3"
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openTop10"
            android:text="TOP 10" />

        <Button
            android:id="@+id/button4"
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openProfile"
            android:text="Saját profil" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Készítette: Mészáros Martin"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:paddingTop="150dp">
        </TextView>

    </LinearLayout>

</LinearLayout>